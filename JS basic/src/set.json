{
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/.cache": true,
		"**/*.js": {
			"when": "$(basename).ts"
		},
		"**/*.js.map": {
			"when": "$(basename)"
		}
	},
	"files.hotExit": "onExit",
	"files.trimTrailingWhitespace": true,
	"editor.fontLigatures": true,
	"eslint.enable": true,
	"eslint.validate": ["javascript", "javascriptreact"],
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},
	"eslint.lintTask.enable": true,
	"eslint.autoFixOnSave": true,
	"emmet.showSuggestionsAsSnippets": true,
	"editor.snippetSuggestions": "top",
	"prettier.singleQuote": true,
	"git.autofetch": true,
	"editor.wordWrap": "on",
	"git.enableSmartCommit": true,
	"poor-mans-t-sql-formatter.std.clauseBreaks": 0,
	"poor-mans-t-sql-formatter.std.expandBetweenConditions": false,
	"poor-mans-t-sql-formatter.std.trailingCommas": false,
	"poor-mans-t-sql-formatter.std.expandCaseStatements": false,
	"prettier.jsxBracketSameLine": true,
	"prettier.jsxSingleQuote": true,
	"workbench.iconTheme": "material-icon-theme",
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.colorDecorators": false,
	"window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
	"workbench.editor.tabSizing": "shrink",
	"terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
	"workbench.startupEditor": "newUntitledFile",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"editor.largeFileOptimizations": false,
	"npm-intellisense.importES6": true,
	"npm-intellisense.importQuotes": "'",
	"npm-intellisense.importLinebreak": ";\r\n",
	"npm-intellisense.importDeclarationType": "const",
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"code-runner.clearPreviousOutput": true,
	"code-runner.enableAppInsights": false,
	"code-runner.saveFileBeforeRun": true,
	"workbench.statusBar.visible": true,
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"explorer.openEditors.visible": 0,
	"[xsl]": {
		"editor.defaultFormatter": "redhat.vscode-xml"
	},
	"xml.format.splitAttributes": true,
	"xml.format.preservedNewlines": 0,
	"extensions.ignoreRecommendations": false,
	"terminal.integrated.cursorStyle": "line",
	"eslint.alwaysShowStatus": true,

	// "editor.tabSize": 2,
	// "editor.mouseWheelZoom": true,
	// "workbench.tree.renderIndentGuides": "always",
	"workbench.editor.highlightModifiedTabs": true,
	"editor.suggestSelection": "first",
	// "workbench.tree.indent": 16,
	"search.showLineNumbers": true,
	"telemetry.enableTelemetry": false,
	// "editor.scrollBeyondLastLine": false,
	"javascript.suggest.names": false,
	"editor.wordBasedSuggestions": false,
	"bracketPairColorizer.highlightActiveScope": true,
	// "prettier.printWidth": 120,
	"prettier.endOfLine": "lf",
	"editor.formatOnSave": true,
	"workbench.view.alwaysShowHeaderActions": true,
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.cursorStyle": "line",
	"editor.cursorBlinking": "solid",
	"zenMode.centerLayout": false,
	"zenMode.hideTabs": false,
	"zenMode.hideLineNumbers": false,
	"workbench.activityBar.visible": true,
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"html-css-class-completion.enableEmmetSupport": true,
	"color-highlight.markerType": "underline", // requires Color Highlight Extension
	"color-highlight.markRuler": false,
	"editor.cursorWidth": 3,
	"editor.lineHeight": 22,
	"editor.fontFamily": "Fira Code, Menlo, monospace",
	"editor.fontWeight": "500",
	// "editor.fontFamily": "'Operator Mono', Menlo, monospace",
	// "editor.fontSize": 15,
	// "editor.fontWeight": "300",
	// "editor.letterSpacing": 0.5,
	"workbench.colorTheme": "Solarized Light",
	"editor.matchBrackets": false, // using Subtle Match Brackets instead
	"terminal.integrated.fontSize": 12,
	"workbench.colorCustomizations": {
		"[Solarized Light]": {
			"editorIndentGuide.activeBackground": "#b3b3b3",
			"editorIndentGuide.background": "#d9d9d9"
		},
		"[Cobalt Next]": {
			"titleBar.activeForeground": "#222",
			"titleBar.activeBackground": "#dadada",
			"titleBar.inactiveForeground": "#b2b2b3",
			"titleBar.inactiveBackground": "#f6f6f6",
			"sideBar.border": "#1b2b34",
			"activityBar.border": "#1b2b34"
		}
	},
	"vsintellicode.modify.editor.suggestSelection": "choseToUpdateConfiguration",
	"eslint.experimental.incrementalSync": true,
	"prettier.useTabs": true,
	"workbench.editor.enablePreviewFromQuickOpen": false
}
