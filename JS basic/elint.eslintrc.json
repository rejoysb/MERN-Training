// install babel-eslint -> npm i -g babel-eslint
// install eslint-plugin-react (+version of eslint shown in warning)
// install eslint-plugin-react-native  (+version of eslint shown in warning)
// Add below code to settings.json file
//  "eslint.options": {
// "configFile": "C:\\Users\\abhis\\Documents\\.eslintrc.json"
// },

{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"react-native/react-native": true
	},
	// "parser": "babel-eslint",
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react-native/all"
	],
	// "extends": ["eslint:recommended", "plugin:react/recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "react-native"],
	// "plugins": ["react"],
	"rules": {
		"no-unused-vars": "warn",
		"react/self-closing-comp": [
			"error",
			{
				"component": true,
				"html": true
			}
		],
		"react/display-name": 0,
		"react/prop-types": 0,
		// "react/prop-types": ["warn", { "ignore": ["navigation"] }],
		"react-native/no-unused-styles": 1,
		"react-native/sort-styles": 0,
		"react-native/split-platform-components": 2,
		"react-native/no-inline-styles": 0,
		"react-native/no-color-literals": 0,
		"react-native/no-raw-text": 1
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
